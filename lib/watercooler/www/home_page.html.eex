<main>
  <h1>Watercooler</h1>
  <h2>Node: <%= @node %></h2>
  <iframe name="myframe" width="0" height="0"></iframe>
  <form action="/publish" method="post" target="myframe">
    <input type="text" name="message">
    <button type="submit">Publish</button>
  </form>
  <hr>
  <h1>Messages</h1>
  <ul id="messages"></ul>
</main>
